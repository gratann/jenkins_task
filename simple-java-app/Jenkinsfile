pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                dir('simple-java-app') {
                    echo 'ğŸ”¨ Building...'
                    bat 'mvn compile'
                }
            }
        }

        stage('Test') {
            steps {
                dir('simple-java-app') {
                    echo 'ğŸ§ª No tests yet...'
                }
            }
        }

        stage('Package') {
            steps {
                dir('simple-java-app') {
                    echo 'ğŸ“¦ Packaging...'
                    bat 'mvn package'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('simple-java-app') {
                    echo 'ğŸš€ Deploying...'
                    bat 'java -cp target/hello-1.0.jar Hello'
                }
            }
        }
    }
}
